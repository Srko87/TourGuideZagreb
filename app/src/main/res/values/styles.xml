<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="HeadLine">
        <item name="android:textSize">@dimen/headText</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_margin">@dimen/generalMargin</item>
    </style>

    <style name="InfoText">
        <item name="android:textSize">@dimen/infoText</item>
        <item name="android:layout_margin">@dimen/generalMargin</item>
    </style>

    <style name="EntryName">
        <item name="android:textSize">@dimen/entryText</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
